   "source": [
    "import numpy as np\n",
    "\n",
    "def hinge_loss(y_true, y_pred):\n",
    "    return np.mean(np.maximum(0, 1 - y_true * y_pred))\n",
    "\n",
    "# Example\n",
    "y_true = np.array([1, -1, 1, -1])    # true labels\n",
    "y_pred = np.array([0.8, -0.5, 0.3, 0.2])  # raw scores\n",
    "\n",
    "loss = hinge_loss(y_true, y_pred)\n",
    "print(\"Hinge Loss:\", loss)\n"
   ]
